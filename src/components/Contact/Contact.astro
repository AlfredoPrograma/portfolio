---
import ButtonLink from "@components/Button/ButtonLink.astro";
import type { NavLinkProps } from "@components/Navbar/NavLink.astro";
import type { UIStrings } from "@i18n/dictionaries";

interface ContactLink extends NavLinkProps {
  featured?: boolean;
  download?: boolean;
}

interface ContactProps {
  copy: UIStrings["contact"];
  links: ContactLink[];
}

type Props = ContactProps;

const { copy, links } = Astro.props;
---

<section id="contact" class="py-20 px-6 bg-neutral-100">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-light text-neutral-900 mb-8">
      {copy.title}
    </h2>
    <p class="text-lg text-neutral-700 mb-12 max-w-2xl mx-auto leading-relaxed">
      {copy.description}
    </p>
    <div class="flex flex-col sm:flex-row gap-8 justify-center items-center mb-8">
      {
        links.map(({ href, text, featured, download }) => (
          <ButtonLink
            size="lg"
            variant={featured ? "fill" : "outline"}
            href={href}
            download={download}
          >
            {text}
          </ButtonLink>
        ))
      }
    </div>

    <div>
      <p class="text-neutral-700 max-w-2xl mx-auto leading-relaxed text-balance">
        {copy.emailIntro}
        {" "}
        <a href={`mailto:${copy.emailLinkText}`} class="text-blue-600 hover:underline">
          {copy.emailLinkText}
        </a>
      </p>
    </div>
  </div>
</section>
