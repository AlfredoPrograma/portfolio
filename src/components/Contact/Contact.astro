---
import ButtonLink from "@components/Button/ButtonLink.astro";
import type { NavLinkProps } from "@components/Navbar/NavLink.astro";
import { getLangFromUrl } from "@i18n/utils";
import { translate } from "@i18n/pages/index";

const lang = getLangFromUrl(Astro.url);
const t = translate(lang);

const CONTACT_LINKS = [
  {
    href: "#blog",
    text: "Blog",
    featured: true,
  },
  {
    href: "https://www.linkedin.com/in/alfredoprograma/",
    text: "LinkedIn",
  },
  {
    href: "https://github.com/AlfredoPrograma",
    text: "Github",
  },
  {
    href: "/Alfredo-Arvelaez-CV-English.pdf",
    text: t("contact.download-resume"),
    download: true,
  },
] satisfies (NavLinkProps &
  Partial<{ featured: boolean; download: boolean }>)[];
---

<section id="contact" class="py-20 px-6">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-light text-neutral-900 mb-8">
      {t("contact.title")}
    </h2>
    <p class="text-lg text-neutral-600 mb-12 max-w-2xl mx-auto leading-relaxed">
      {t("contact.description")}
    </p>
    <div class="flex flex-col sm:flex-row gap-8 justify-center items-center">
      {
        CONTACT_LINKS.map(({ href, text, featured, download }) => (
          <ButtonLink
            size="lg"
            variant={featured ? "fill" : "outline"}
            href={href}
            download={download}
          >
            {text}
          </ButtonLink>
        ))
      }
    </div>
  </div>
</section>
