---
import { cn } from "@utils/cn";

type ButtonVariant = "fill" | "outline";
type ButtonSize = "sm" | "lg";

interface ButtonLinkProps {
  href: string;
  download?: boolean;
  variant?: ButtonVariant;
  size?: ButtonSize;
}

type Props = ButtonLinkProps;
const { href, download, variant = "fill", size = "sm" } = Astro.props;
---

<a
  download={download}
  href={href}
  class={cn({
    "inline-flex items-center justify-center px-4 py-2 bg-neutral-900 text-white hover:bg-neutral-800 transition-colors rounded-sm font-medium":
      variant === "fill",
    "inline-flex items-center justify-center px-4 py-2 border border-neutral-300 text-neutral-700 hover:border-neutral-400 hover:text-neutral-900 transition-colors rounded-sm font-medium":
      variant === "outline",
    "px-4 py-2": size === "sm",
    "px-8 py-3": size === "lg",
  })}
>
  <slot />
</a>
